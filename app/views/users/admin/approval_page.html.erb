<h1>Unapproved Users</h1>

<% @unapproved_users.each do |user| %>
  <div>
    <p>
      <strong>Email:</strong> <%= user.email %> |
      <strong>User Type:</strong> <%= user.user_type %>
    </p>
    <div>
      <%= button_to 'Approve', admin_approve_user_path(user), method: :patch, class: 'approve-button' %>
      <%= button_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure you want to remove this user?' } %>
      <%= button_to "Load Courses", load_courses_courses_path, method: :get %>
    </div>
  </div>
<% end %>
