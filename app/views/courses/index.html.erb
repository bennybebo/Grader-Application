 <h1> Course Catalog <%= current_user.user_type == 'Admin' ? button_to('Reload Courses', load_courses_courses_path, method: :get) : '' %></h1>

<% if @courses.empty? %>
  <p>No courses loaded in the database.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Course #</th>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.course_number %></td>
          <td><%= course.course_name %></td>
          <td><%= course.course_description %></td>
          <td><%= link_to 'Show Sections', course %></td>
          <% if current_user.user_type == 'Admin' %>
            <td><%= link_to 'Edit Course', edit_course_path(course) %></td>
            <td><%= link_to 'Delete Course', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>