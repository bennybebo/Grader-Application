<h1> Course Catalog <%= current_user.user_type == 'Admin' ? link_to('Reload Courses', reload_courses_form_path) : '' %></h1>

<% if @courses.empty? %>
  <p>No courses loaded in the database. This must be done by an administrator.</p>
<% else %>
  <table border="1">
    <thead>
      <tr>
        <th>Course #</th>
        <th>Title</th>
        <th>Description</th>
        <th>Section Info</th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td style="width: auto; padding: 10px;"><%= course.course_number %></td>
          <td style="width: auto; padding: 10px;"><%= course.course_name %></td>
          <td style="width: auto; padding: 10px;"><%= course.course_description %></td>
          <td style="width: auto; padding: 10px;"><%= link_to 'Show Sections', course %></td>
          <% if current_user.user_type == 'Admin' %>
            <td><%= link_to 'Edit Course', edit_course_path(course) %></td>
            <td><%= button_to 'Delete Course', course, method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>